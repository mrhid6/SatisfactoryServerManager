                                <span>Logs</span>
                            </a>
                        </li>
                        {{/if}}
                        {{#if perms.saves}}
                        <li class="nav-item">
                            <a class="nav-link" href="/saves" data-bs-toggle="tooltip" data-bs-placement="right"
                                title="Save Files">
                                <i class="fas fa-save"></i>
                                <span>Saves</span>
                            </a>
                        </li>
                        {{/if}}

                         {{#if perms.admin.backups}}
                        <li class="nav-item">
                            <a class="nav-link" href="/backups" data-bs-toggle="tooltip" data-bs-placement="right"
